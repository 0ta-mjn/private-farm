{
  "name": "@repo/dashboard-db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./interfaces": {
      "types": "./dist/interfaces.d.ts",
      "default": "./src/interfaces/index.ts"
    },
    "./testing": {
      "types": "./dist/testing.d.ts",
      "default": "./src/testing.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "d1:generate": "pnpm drizzle-kit generate --dialect sqlite --out ./migrations/d1 --schema ./src/adapters/d1/schema.ts",
    "d1:migrate": "wrangler d1 migrations apply dashboard --config ../../infra/cloudflare/api/wrangler.toml",
    "d1:migrate:testing": "wrangler d1 migrations apply dashboard --config ../../infra/cloudflare/api/wrangler.toml --local",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@repo/config": "workspace:*",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "postgres": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "dotenv-cli": "catalog:",
    "drizzle-kit": "catalog:",
    "eslint": "catalog:",
    "miniflare": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "wrangler": "catalog:"
  }
}
