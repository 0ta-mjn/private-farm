{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "!.cache/**"],
      "env": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_API_URL",
        "ACCEPT_ORIGINS",
        "SUPABASE_URL",
        "SUPABASE_KEY",
        "DATABASE_URL",
        "API_PORT",
        "CI"
      ]
    },
    "start": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "!.cache/**"],
      "env": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_API_URL",
        "ACCEPT_ORIGINS",
        "SUPABASE_URL",
        "SUPABASE_KEY",
        "DATABASE_URL",
        "API_PORT",
        "CI"
      ]
    },
    "test": {
      "dependsOn": ["lint", "@repo/emulator#start", "@repo/db#push"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "DATABASE_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_API_URL",
        "CI"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_API_URL",
        "ACCEPT_ORIGINS",
        "SUPABASE_URL",
        "SUPABASE_KEY",
        "DATABASE_URL",
        "API_PORT"
      ]
    },
    "push": {
      "dependsOn": ["^push"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "emulator:setup": {
      "dependsOn": ["^emulator:setup"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "stop": {
      "cache": false
    },
    "stopd": {
      "cache": false
    },
    "studio": {
      "cache": false,
      "persistent": true
    }
  }
}
